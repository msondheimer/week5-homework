<div class='container'>
  <h2>Add a new comic</h2>
</div>

<div class='row'>
	<div class="col-md-6">
    	<form action="/comics/create">
      		<div class="form-group">
      			<label for="title">Comic Title:</label>
        		<input type="text" name="title" class="form-control" id="title" placeholder="Enter comic title here">
        	</div>

        	 <div class="form-group">
        		<label for="description">Comic description:</label>
        		<input type="text" name="description" class="form-control" id="title" placeholder="Enter a description of the comic">
        	</div>

        	<div class="form-group">
        		<label for="title">Poster URL:</label>
        		<input type="text" name="image_url" class="form-control" id="title" placeholder="Enter URL to a comic poster image">
        	</div>
  <!-- RENDER THE FORM PARTIAL HERE. -->
  <button type="submit" class="btn btn-default">Submit</button>

</div>


<div class='container'>
  <%= link_to 'Back to all comics', "/comics" %>
</div>
